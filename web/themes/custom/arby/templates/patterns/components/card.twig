<article class="card">
    {% if title %}
      {% include '@base/title.twig' with {
          text: title,
          url: url,
          modifier: 'standard'
      } %}
    {% endif %}
    {% if subtitle %}
      {% include '@base/subtitle.twig' with {
          text: subtitle,
          modifier: 'standard'
      } %}
    {% endif %}
    {% if img_src %}
      <img src="{{ img_src }}" />
    {% endif %}
    {% if button %}
        {% include '@base/button.twig' with {
            text: button.text,
            modifier: button.modifier
        } %}
    {% endif %}
</article>
